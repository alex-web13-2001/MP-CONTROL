# ===========================================
# MP-CONTROL Production Environment
# ===========================================
# COPY this file as .env on the server and fill in real values.
# DO NOT commit real credentials to git!

# --- PostgreSQL (external managed) ---
POSTGRES_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DBNAME?ssl=require

# --- ClickHouse (local container) ---
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=YOUR_CLICKHOUSE_PASSWORD_HERE
CLICKHOUSE_DB=mms_analytics

# --- Security ---
SECRET_KEY=GENERATE_WITH_openssl_rand_-hex_32

# --- Domain ---
DOMAIN=mp-control.ru
